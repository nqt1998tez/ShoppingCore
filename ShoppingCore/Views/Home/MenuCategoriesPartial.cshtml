@using ShoppingCore.Models.ViewModels;
@model IEnumerable<MenuViewModel>

<ul class="memenu skyblue">
    <li class="active grid"><a class="color8" href="index.html">Home</a></li>
    @foreach (var category in Model)
    {
        <li>
            <a class="color1" href="#">@category.CategoryName</a>
            <div class="mepanel">
                <div class="row">
                    <div class="col1">
                        <div class="col1">
                            <div class="h_nav">
                                <ul>
                                    @await Html.PartialAsync("MenuProducerPartial",category.Producers)
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </li>
    }
    <li class="grid">
        <a class="color2" href="#">	Brand</a>
        <div class="mepanel">
            <div class="row">
                @foreach (var category in Model)
                {

                <div class="col1">
                    <div class="h_nav">
                        <h4>@category.CategoryName</h4>
                        <ul>
                            @await Html.PartialAsync("MenuProducerPartial", category.Producers)
                        </ul>
                    </div>
                </div>
                }
            </div>
        </div>
    </li>
    <li><a class="color4" href="blog.html">Blog</a></li>
    <li><a class="color6" href="contact.html">Conact</a></li>
</ul>